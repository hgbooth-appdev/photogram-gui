<h1>List of photos</h1>

<form action="/insert_photo_record">
  
  <label for="Image">Image</label>
  <input type="text" id="Image" name="imageUpload" placeholder="Enter a URL for the image...">
  
  <label for="Caption">Caption</label>
  <textarea type="text" id="Caption" name="captionUpload" placeholder="Enter a caption for the photo..."></textarea>
  
  <label for="Owner ID">Owner</label>
  <input type="text" id="Owner ID" name="ownerUpload" placeholder="Enter an ID of a User">

  <button type="submit">Add photo</button>

</form>

<hr>

<table border="1">
  <tr>
    <th>Image</th>
    <th>Caption</th>
    <th>Owner</th>
    <th>Posted</th>
    <th></th>
  </tr>

  <% @photos.each do |p|%>

    <tr>
      <td><img src="<%= p.image %>"></td>
      <td><%= p.caption %></td>
      <td><%= p.poster.username %></td>
      <td><%= p.created_at %></td>
      <td><a href="/photos/<%= p.id %>">Show details</a></td>


    </tr>

  <% end %>

</table>