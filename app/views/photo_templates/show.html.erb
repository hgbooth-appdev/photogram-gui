<h1>Photo details</h1>

<dl>
  <dt>Image</dt>
  <dd><img src="<%= @photo.image %>"></dd>

  <dt>Owner</dt>
  <dd><%= @photo.poster.username %></dd>

  <dt>Caption</dt>
  <dd><%= @photo.caption %></dd>

  <dt>Posted</dt>
  <dd><%= @photo.created_at %></dd>

  <dt>Edit photo</dt>
  <dd>Form</dd>

  <dt>Delete photo</dt>
  <dd><a href="/delete_photo/<%= @photo.id %>">Delete this photo</a></dd>

</dl>

<h2>Comments</h2>

<table>
  <tr>
    <th>Commenter</th>
    <th>Comment</th>
    <th>Posted</th>
  </tr>

  <% @photo.comments.each do |c|%>

  <tr>
    <td><%= c.commenter.username%> </td>
    <td><%= c.body%> </td>
    <td><%= c.created_at %> </td>
  </tr>

  <% end %>
</table>

