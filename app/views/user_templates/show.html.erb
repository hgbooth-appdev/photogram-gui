<h1><%= @curUser.username %></h1>

<dl>
  <dt>ID</dt>
  <dd><%= @curUser.id%></dd>
  
  <dt>Edit user</dt>
  <dd>form goes here</dd>

</dl>

<h2>Own photos (<%= @curUser.own_photos.count %>)</h2>

<table border="1">

<tr>
  <th>Image</th>
  <th>Owner</th>
  <th>Caption</th>
  <th>Posted</th>
  <th></th>
</tr>

<% @curUser.own_photos.each do |p| %>

<tr>
  <td><img src="<%= p.image %>"></td>
  <td><%= p.poster.username %></td>
  <td><%= p.caption %></td>
  <td><%= p.created_at %></td>
  <td><a href="/photos/<%= p.id%>">Show details</a></td>
</tr>

<% end %>

</table>